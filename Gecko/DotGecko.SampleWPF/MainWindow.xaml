        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gecko="http://schemas.dotgecko.org/"
        WindowStartupLocation="CenterScreen"
        Title="{Binding ElementName=browserElement, Path=Title}"
        Width="720"
        Height="405">
